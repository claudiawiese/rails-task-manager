<ul>
  <% @tasks.each do |task| %>
  <li><input type="checkbox" <%= "checked" if task.completed %>> <%=task.title%> - <%=task.details%> <%= link_to "Edit", edit_task_path(task)%>
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</li>
  <%end%>
</ul>

<%= link_to "Add a new task", tasks_new_path %>
